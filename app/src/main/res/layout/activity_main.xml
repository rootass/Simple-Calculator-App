<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textColor="#555"
        android:textSize="32dp"
        android:id="@+id/display"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/display"
        android:id="@+id/linearLayout">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="CLEAR"
            android:textColor="#fff"
            android:background="#333"
            android:onClick="clear"
            android:id="@+id/clear"/>

        <!--<Button-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_weight="0.5"-->
            <!--android:text="DELETE"-->
            <!--android:layout_below="@+id/display"-->
            <!--android:textColor="#fff"-->
            <!--android:background="#D1143C"-->
            <!--android:onClick="perform" android:tag="d"-->
            <!--android:id="@+id/delete"/>-->

    </LinearLayout>



    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="4"
        android:rowCount="4"
        android:layout_below="@+id/linearLayout">

        <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:textColor="#ac3"
            android:background="@drawable/number_background"
            android:textSize="20dp"
            android:onClick="perform" android:tag="0"
            android:text="0"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:id="@+id/btn2"
            android:textColor="#ac3"
            android:background="@drawable/number_background"
            android:textSize="20dp"
            android:onClick="perform" android:tag="1"
            android:text="1"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:layout_row="0"
            android:id="@+id/btn3"
            android:textColor="#ac3"
            android:background="@drawable/number_background"
            android:textSize="20dp"
            android:onClick="perform" android:tag="2"
            android:text="2"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_row="0"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:id="@+id/btn4"
            android:textColor="#ac3"
            android:background="@drawable/number_background"
            android:textSize="20dp"
            android:onClick="perform" android:tag="3"
            android:text="3"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:layout_row="1"
            android:id="@+id/btn5"
            android:textColor="#ac3"
            android:background="@drawable/number_background"
            android:textSize="20dp"
            android:onClick="perform" android:tag="4"
            android:text="4"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:id="@+id/btn6"
            android:textColor="#ac3"
            android:background="@drawable/number_background"
            android:textSize="20dp"
            android:onClick="perform" android:tag="5"
            android:text="5"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="1"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:id="@+id/btn7"
            android:textColor="#ac3"
            android:background="@drawable/number_background"
            android:textSize="20dp"
            android:onClick="perform" android:tag="6"
            android:text="6"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_row="1"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:id="@+id/btn8"
            android:textColor="#ac3"
            android:background="@drawable/number_background"
            android:textSize="20dp"
            android:onClick="perform" android:tag="7"
            android:text="7"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:id="@+id/btn9"
            android:textColor="#ac3"
            android:background="@drawable/number_background"
            android:textSize="20dp"
            android:onClick="perform" android:tag="8"
            android:text="8"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:id="@+id/btn10"
            android:textColor="#ac3"
            android:background="@drawable/number_background"
            android:textSize="20dp"
            android:onClick="perform" android:tag="9"
            android:text="9"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="2"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:layout_rowWeight="1"
            android:layout_columnSpan="2"
            android:layout_gravity="fill_horizontal"
            android:id="@+id/btn12"
            android:textSize="20dp"
            android:textColor="#ac3"
            android:background="@drawable/number_background"
            android:layout_margin="2dp"
            android:onClick="callEquals" android:tag="="
            android:text="="/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="3"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:id="@+id/btn13"
            android:background="@drawable/operator_background"
            android:textSize="20dp"
            android:textColor="#fff"
            android:onClick="callOperators" android:tag="+"
            android:text="➕"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="3"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:id="@+id/btn14"
            android:background="@drawable/operator_background"
            android:textSize="20dp"
            android:textColor="#fff"
            android:onClick="callOperators" android:tag="-"
            android:text="➖"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="3"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:gravity="center"
            android:id="@+id/btn15"
            android:background="@drawable/operator_background"
            android:textSize="20dp"
            android:textColor="#fff"
            android:onClick="callOperators" android:tag="*"
            android:text="✖"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_row="3"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:gravity="center"
            android:id="@+id/btn16"
            android:background="@drawable/operator_background"
            android:textSize="20dp"
            android:textColor="#fff"
            android:onClick="callOperators" android:tag="÷"
            android:text="➗"/>

    </GridLayout>

</RelativeLayout>